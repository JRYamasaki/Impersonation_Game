
<!DOCTYPE html>
<html lang ="en">
<head><title>Main Page</title></head>

<% @allUsers = User.all %>

<body>
	<nav class="navbar navbar-inverse">
	  	<div class="container-fluid">
		    <div class="navbar-header">
		    	<a class="navbar-brand">Impersonation Game</a>
		    </div>
		    <div class="collapse navbar-collapse" id="myNavbar">
			    <ul class="nav navbar-nav">
			        <li><a href="/mainpage/mainpage">Home</a></li>
			        <li><a href="#">About</a></li>
					<li><a href="/users">Users</a></li>
			    </ul>
			    <ul class="nav navbar-nav navbar-right">
			    	<li><%= link_to("Logout",access_logout_path) %></li>
			    </ul>
		    </div>
	  	</div>
	</nav>
	<div class="container-fluid">
		<div class="row content">
			<div class="col-sm-2 sidebar">
				<ul class="nav nav-pills nav-stacked">
					<li><h4>Users</h4></li>
					<% @allUsers.each do |s| %>
			      		<li> <%=s.username %> </li>
			      	<% end %>
				</ul>
			</div>
			<div class="col-sm-10 mainArea">
				<%= flash[:notice] %>
				<div class="col-sm-12 text-center">
					<div class="btn btn-primary btn-lg"><%= link_to 'Create Lobby', lobby_new_path(@lobby), :class => "btn" %></div>
					<div class="btn btn-primary btn-lg"><%= link_to 'Find Lobby', lobby_index_path(@lobby), :class => "btn" %></div>
				</div>
			</div>
		</div>
	</div>
	<footer class="container-fluid"></footer>
</body>
</html>
